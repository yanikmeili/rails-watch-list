<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
 url(<%= cl_image_path(@list.photo.key) %>)">

  <div class="container">
    <h1> <strong><%= @list.name %></strong></h1>
  </div>
</div>

<% @bookmarks.each do |bookmark| %>

<div class="card-product">
  <img src="https://picsum.photos/200/300/?blur" />
  <div class="card-product-infos">
    <h2><%= bookmark.movie.title %></h2>
    <p><%= bookmark.movie.overview %></p>
    <p><%= bookmark.movie.rating %></p>
    <p><%= bookmark.comment %></p>
  </div>
</div>

<% end  %>

<p> <%= link_to 'Add movie', new_list_bookmark_path(@list), class:"btn btn-ghost" %> </p>
<p> <%= link_to 'back to list', root_path, class:"btn btn-ghost" %> </p>

</div>



